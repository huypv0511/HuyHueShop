@model IEnumerable<Model.EF.User>
@{
    ViewBag.Title = "UserList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<html dir="ltr" lang="en-US">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="author" content="SemiColonWeb" />
    <title>Admin Huy Huế Fruits</title>
</head>
<body class="stretched">
    <div id="page-menu" class="no-sticky">

        <div id="page-menu-wrap">

            <div class="container clearfix">

                <div class="menu-title">Trang <span>Quản trị</span></div>

                <nav>
                    <ul>
                        <li class="current"><a href="#"><div>Tài khoản</div></a></li>
                        <li><a href="@Url.Action("ListProduct","Product")"><div>Sản phẩm</div></a></li>
                        <li><a href="portfolio-notitle.html"><div>Thể loại</div></a></li>
                        <li><a href="portfolio-title-overlay.html"><div>Đơn hàng</div></a></li>
                        <li><a href="portfolio-fullwidth.html"><div>Khiếu nại</div></a></li>
                        <li><a href="portfolio-fullwidth-notitle.html"><div>Thống kê</div></a></li>
                    </ul>
                </nav>

                <div id="page-submenu-trigger"><i class="icon-reorder"></i></div>

            </div>

        </div>

    </div><!-- #page-menu end -->
    <section id="page-title">

        <div class="container clearfix">
            <h1>Chào mừng !</h1>
            <span>Đến với trang quản trị nơi quản lý tài nguyên website</span>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","User")">Quản trị</a></li>
                <li class="breadcrumb-item active" aria-current="page">Tài khoản</li>
            </ol>
        </div>

    </section><!-- #page-title end -->
    <section id="content">
        <div class="content-wrap">
            <div class="container clearfix">
                <div class="table-responsive">
                    <table id="datatable1" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Tài khoản</th>
                                <th>Họ & tên</th>
                                <th>Email</th>
                                <th>Số điện thoại</th>
                                <th>Địa chỉ</th>
                                <th>Ngày tạo</th>
                                <th>Tác vụ</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Tài khoản</th>
                                <th>Họ & tên</th>
                                <th>Email</th>
                                <th>Số điện thoại</th>
                                <th>Địa chỉ</th>
                                <th>Ngày tạo</th>
                                <th>Tác vụ</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Username</td>
                                    <td>@item.Fullname</td>
                                    <td>@item.Email</td>
                                    <td>@item.SDT</td>
                                    <td>@item.Address</td>
                                    <td>@item.Datetime</td>
                                    <td>
                                      <a href="/Admin/User/Edit/@item.ID">Sửa</a>|
                                        @Ajax.ActionLink("Xoá", "Delete", new { @id = item.ID }, new AjaxOptions
                                {
                                    Confirm = "Bạn có muốn xóa bản ghi này??",
                                    OnComplete = "window.location.reload()",
                                    HttpMethod = "Delete"
                                })
                                        @*<a href="" data-toggle="modal" data-target="#myModal">Sửa</a>
                                        @Html.Partial("~/Areas/Admin/Views/User/Edit.cshtml", new ViewDataDictionary { { "id", item.ID } })*@
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
